/* pages/wallet/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background: #ccc;
}
.money{
  width: 100%;
  height: 30vh;
  background: #eee;
  text-align: center;
}
.money .my-money{
  font-size: 30rpx;
  margin: 20rpx 0;
}
.money .money-content{
  width: 100%;
  height: 20vh;
  display: inline-block;
  font-weight: bold;
  font-size: 100rpx;
  line-height: 20vh;
}
.money .money-des{
  display: inline-block;
  border: 1px solid #000;
  padding: 0rpx 10rpx;
  font-size: 30rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.btn{
  background: #b9dd08;
  width: 90%;
  margin: 40rpx auto;
}
.ticket,.deposlt,.about{
  width: 100%;
  background: #eee;
  height: 10vh;
  display: flex;
  justify-content: space-between;
  
}
.ticket text,.deposlt text,.about text{
  font-size: 40rpx;
  line-height: 10vh;
  margin: 0rpx 40rpx;
}

.deposlt,.about{
  margin-top: 40rpx;
}
.deposlt-des{
  font-size: 30rpx;
  color: #b9dd08;
}
